@model SBMProjectModel.Models.Supplier
@{
    ViewBag.Title = "Supplier Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section section_top
{
}
<div class="form-group">
    @if (ViewBag.SMsg != null)
    {
        <div class="col-md-offset-2 col-md-10" style="color:green">
            @ViewBag.SMsg
        </div>
    }
    @if (ViewBag.FMsg != null)
    {
        <div class="col-md-offset-2 col-md-10" style="color:red">
            @ViewBag.FMsg
        </div>
    }

</div>
<div class="row grid-margin">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                @using (Html.BeginForm("SupplierCreate", "Supplier", FormMethod.Post, new { @id = "SupplierForm", enctype = "multipart/form-data" }))
                {
                    <fieldset>
                        <div class="row">
                            <div class="col-4">
                                <div class="form-group">
                                    <label for="Name">Name</label>
                                    <input id="Name" class="form-control" name="Name" minlength="2" type="text" required>
                                </div>
                            </div>
                            <div class="col-4">
                                <div class="form-group">
                                    <label for="Contact">Contact</label>
                                    <input id="Contact" class="form-control" name="Contact" maxlength="11" type="text" required>
                                </div>
                            </div>
                            <div class="col-4">
                                <div class="form-group">
                                    <label for="Email">E-Mail</label>
                                    <input id="Email" class="form-control" type="email" name="Email">
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-4">
                                <div class="form-group">
                                    <label for="Address">Address</label>
                                    <textarea rows="3" class="form-control" name="Address" id="Address"></textarea>
                                </div>
                            </div>
                        </div>
                        <div class="col-4">
                            <div class="form-group">
                                <label for="UploadFiles">Files</label>
                                <input id="UploadFiles" class="form-control" name="UploadFiles" type="file">
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-12">
                                <div class="form-group">
                                    <button class="btn btn-primary" type="submit" id="SupplierSave" name="submit">Save</button>
                                </div>
                            </div>
                        </div>

                    </fieldset>
                }
            </div>
        </div>
    </div>
</div>

@section section_footer
{
    <!-- Custom js for this page-->
    <script src="~/Content/js/form-validation.js"></script>
    <script src="~/Content/js/bt-maxLength.js"></script>
    <!-- End custom js for this page-->
}



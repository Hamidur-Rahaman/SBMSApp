                            <div class="dropdown-toggle-wrapper">
                                <div class="inner">
                                    <img class="img-xs rounded-circle" src="~/Content/images/faces/face1.jpg" alt="Profile image">
                                </div>
                                <div class="inner">
                                    <div class="inner">
                                        <small class="profile-text small">Admin</small>

@model List<SBMProjectModel.Models.Purchase>
@{
    ViewBag.Title = "Purchase List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="form-group">
    @if (ViewBag.SMsg != null)
    {
        <div class="col-md-offset-2 col-md-10" style="color:green">
            @ViewBag.SMsg
        </div>
    }
    @if (ViewBag.FMsg != null)
    {
        <div class="col-md-offset-2 col-md-10" style="color:red">
            @ViewBag.FMsg
        </div>
    }

</div>

<div class="row">
    <div class="col-12 table-responsive">
        <h5 class="card-header h5">@Html.ActionLink("Add New", "PurchaseCreate", "Purchase", null)</h5>
        @if (Model != null && Model.Count > 0)
        {
            <table class="table table-striped table-hover" id="order-listing">
                <thead>
                    <tr>
                        @*<th>@Html.DisplayNameFor(model=> model.Name)</th>*@
                        <th>Date</th>
                        <th>Invoice</th>
                        <th>SupplierId</th>
                        <th>Action</th>

                    </tr>
                </thead>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @item.Date
                        </td>
                        <td>
                            @item.InvoiceNo
                        </td>
                        <td>
                            @item.SupplierId
                        </td>
                        <td>
                            @*@Html.ActionLink("Edit", "PurchaseDelete", "Purchase", new { id = item.Id }, null) |*@
                            @*@Html.ActionLink("Delete", "CustomerDelete", "Customer", new {id = item.Id}, null)*@
                            @*<a id="@item.Id" onclick="confirmDelete(id);" style="cursor: pointer;color:blue">Delete</a>*@
                        </td>
                   </tr>
                }

            </table>
        }
    </div>
</div>

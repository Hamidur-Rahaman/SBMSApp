@model SBMProjectModel.Models.Product
@{
    ViewBag.Title = "Product Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section section_top
{
}
<div class="form-group">
    @if (ViewBag.SMsg != null)
    {
        <div class="col-md-offset-2 col-md-10" style="color:green">
            @ViewBag.SMsg
        </div>
    }
    @if (ViewBag.FMsg != null)
    {
        <div class="col-md-offset-2 col-md-10" style="color:red">
            @ViewBag.FMsg
        </div>
    }

</div>
<div class="row grid-margin">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                @using (Html.BeginForm("ProductCreate", "Product", FormMethod.Post, new { @id = "CustomerForm", enctype = "multipart/form-data" }))
                {
                    <fieldset>
                        <div class="row">
                            <div class="col-4">
                                <div class="form-group">
                                    <label for="Code">Code</label>
                                    <input id="Code" class="form-control" name="Code" type="text" required>
                                </div>
                            </div>
                            <div class="col-4">
                                <div class="form-group">
                                    <label for="Name">Name</label>
                                    <input id="Name" class="form-control" name="Name" type="text" required>
                                </div>
                            </div>
                            <div class="col-4">
                                <div class="form-group">
                                    <label for="CategoryId">Category</label>
                                    @Html.DropDownList("CategoryId", (SelectList)ViewData["CategoryDropdownList"], "--Select Category--", new { @class = "form-control" })
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-4">
                                <div class="form-group">
                                    <label for="ReorderLevel">Reorder Level</label>
                                    <input id="ReorderLevel" class="form-control" name="ReorderLevel" type="text">
                                </div>
                            </div>
                            <div class="col-4">
                                <div class="form-group">
                                    <label for="Description">Description</label>
                                    <textarea rows="3" class="form-control" name="Description" id="Description"></textarea>
                                </div>
                            </div>
                        </div>
                        <div class="col-4">
                            <div class="form-group">
                                <label for="UploadFiles">Files</label>
                                <input id="UploadFiles" class="form-control" name="UploadFiles" type="file">
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-12">
                                <div class="form-group">
                                    <button class="btn btn-primary" type="submit" id="ProductSave" name="submit">Save</button>
                                </div>
                            </div>
                        </div>

                    </fieldset>
                }
            </div>
        </div>
    </div>
</div>

@section section_footer
{
    <!-- Custom js for this page-->
    <script src="~/Content/js/form-validation.js"></script>
    <script src="~/Content/js/bt-maxLength.js"></script>
    <!-- End custom js for this page-->
}



@model SBMProjectModel.Models.Category
@{
    ViewBag.Title = "Category Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section section_top
{
}
<div class="form-group">
    @if (ViewBag.SMsg != null)
    {
        <div class="col-md-offset-2 col-md-10" style="color:green">
            @ViewBag.SMsg
        </div>
    }
    @if (ViewBag.FMsg != null)
    {
        <div class="col-md-offset-2 col-md-10" style="color:red">
            @ViewBag.FMsg
        </div>
    }

</div>
<div class="row grid-margin">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                @using (Html.BeginForm("CategoryCreate", "Category", new { @id = "CategoryForm" }))
                {
                    <fieldset>
                        <div class="row">
                            <div class="col-4">
                                <div class="form-group">
                                    <label for="Code">Code</label>
                                    <input id="Code" class="form-control" name="Code" type="text" required>
                                </div>
                            </div>
                            
                        </div>
                        <div class="row">
                            <div class="col-4">
                                <div class="form-group">
                                    <label for="Name">Name</label>
                                    <input id="Name" class="form-control" name="Name" minlength="2" type="text" required>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-12">
                                <div class="form-group">
                                    <button class="btn btn-primary" type="submit" id="CategorySave" name="submit">Save</button>
                                </div>
                            </div>
                        </div>

                    </fieldset>
                }
            </div>
        </div>
    </div>
</div>

@section section_footer
{
    <!-- Custom js for this page-->
    <script src="~/Content/js/form-validation.js"></script>
    <script src="~/Content/js/bt-maxLength.js"></script>
    <!-- End custom js for this page-->
}


